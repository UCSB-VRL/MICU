import socket
import sys

#HOST, PORT = "localhost", 9999
#HOST, PORT = "192.168.1.84", 9999

#HOST = '192.168.1.87'  # WiFi - ECE Net
#HOST = "128.111.185.30" # Wired ECE Net
#HOST = "localhost"
HOST = "128.111.185.232" # Desktop Wired ECE Net
#HOST = "192.168.1.10"

#PORT = 50007 # The same port as used by the server

#data = " ".join(sys.argv[1:])
if len(sys.argv) <2:
    print "Usage: python tcp_client.py <devid> <message>"
    sys.exit()
devid=     sys.argv[1] #"testing"
data =     sys.argv[2]


#    HOST = "192.168.1.10" # Local network 
dev = "dev{}".format(devid)
dev_dict = {'dev1':{'PORT':50007},
            'dev2':{'PORT':50008},
            'dev3':{'PORT':50009}
            }    
#    HOST = "localhost"
PORT = dev_dict[dev]["PORT"] # The same port as used by the server
print "Connecting to PORT: ", PORT
    

# Create a socket (SOCK_STREAM means a TCP socket)
sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

try:
    # Connect to server and send data
    sock.connect((HOST, PORT))
    sock.sendall(devid + " " + data + "\n")

    # Receive data from the server and shut down
    received = sock.recv(1024)
    
    print "Command sent: {}".format(data)
    print "Server reply: {}".format(received)
except:
    pass
    
#finally:
#    sock.close()
